@require 'colors'

.menu
	position: fixed
	top: 2rem
	left: 0.5rem
	z-index: 1001
	padding: 0
	margin: 0

.menu__item
	list-style: none
	background-color: whiteBlue
	padding: 0.7rem 1.5rem
	padding-left: 1rem
	cursor: pointer
	transition: 0.1s all ease-out
	position: relative
	overflow: hidden
	min-width: 8rem
	&:hover
		background-color: blue
		overflow: visible

.menu__nested
	position: absolute
	left: 100%
	top: 0
	padding-left: 0

.menu__neste-item
	@extend .menu__item
	background-color: lighten(whiteBlue, 60%)
