@require 'reset'
@require 'colors'

.fa
	transition: 0.3s all ease-out

body,
html
	height: 100%
	font-family: 'Fira Mono', sans-serif
	background-color: backgroundBlue

main
	height: 100%

.editors
	height: 100%

.editor
	height: 100%
	box-sizing: border-box

.nav
	font-size: 1.25rem
	$height = 2em
	height: $height
	width: 100%
	background-color: lighten(backgroundBlue, 5%)
	cursor: pointer
	position: fixed
	display: block
	top: 0
	left: 0
	z-index: 1000
	display: flex
	flex-direction: row
	color: whiteBlue
	line-height: $height
	box-shadow: 0px 1px 5px 0px rgba(0,0,0,0.35)

.nav__title
	flex-grow: 1
	text-align: center
	-webkit-app-region: drag

.nav__closer
	margin-right: 0.5em
	margin-top: 0.4em
	&:hover
		color: red

.nav__menu
	margin-top: 0.4em
	margin-left: 0.5em
	&:hover
		color: blue
